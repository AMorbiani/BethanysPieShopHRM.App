@page "/"

<h1 class="page-title">Welcome to Bethany's Pie Shop HRM!</h1>
<br />
<h3>Using this application, you can manage our wonderful staff working for us all over the world.</h3>
<br />
<AuthorizeView>
    <Authorized>
        <h1>YOU ARE AUTHORIZED</h1>
        <br />
        @foreach (var widget in Widgets)
        {
            <DynamicComponent Type="widget"></DynamicComponent>
        }
    </Authorized>
    <NotAuthorized>
        <h1>YOU ARE NOT AUTHORIZED</h1>
    </NotAuthorized>
</AuthorizeView>